<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Tour Programme/Leave</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 py-10">

  <main class="max-w-3xl mx-auto bg-white shadow-md rounded-md">
    <!-- Header -->
    <div class="bg-cyan-800 text-white px-6 py-4 rounded-t-md">
      <h2 class="text-xl font-bold">Tour Programme/Leave of Officers</h2>
    </div>

    <!-- Form Section -->
    <form action="/admin/tour" method="POST" class="bg-green-100 p-6 rounded-b-md space-y-6">

      <!-- Section Title -->
      <h3 class="text-md font-semibold text-blue-900 border-b pb-1">Tour Programme/Leave Details:</h3>

      <!-- Officer Name & Designation -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-medium text-gray-700 mb-1">Officer's Name:</label>
          <input type="text" name="name" class="w-full border rounded px-3 py-2" required>
        </div>
        <div>
          <label class="block font-medium text-gray-700 mb-1">Designation:</label>
          <input type="text" name="designation" class="w-full border rounded px-3 py-2" required>
        </div>
      </div>

      <!-- Leaving and Returning Dates -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-medium text-gray-700 mb-1">Leaving HQ on:</label>
          <input type="datetime-local" name="leavingDate" class="w-full border rounded px-3 py-2" required>
        </div>
        <div>
          <label class="block font-medium text-gray-700 mb-1">Coming Back on:</label>
          <input type="datetime-local" name="comingDate" class="w-full border rounded px-3 py-2" required>
        </div>
      </div>

      <!-- Purpose -->
      <div>
        <label class="block font-medium text-gray-700 mb-1">Purpose:</label>
        <textarea name="purpose" rows="3" class="w-full border rounded px-3 py-2" required></textarea>
      </div>

      <!-- Location & Type -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block font-medium text-gray-700 mb-1">Going to:</label>
          <input type="text" name="goingTo" class="w-full border rounded px-3 py-2" required>
        </div>
        <div>
          <label class="block font-medium text-gray-700 mb-1">Leave or Duty:</label>
          <select name="leaveOrDuty" class="w-full border rounded px-3 py-2">
            <option value="Duty">Duty</option>
            <option value="Leave">Leave</option>
          </select>
        </div>
      </div>

      <!-- Buttons -->
      <div class="flex justify-center gap-6 mt-4">
        <button type="submit" class="bg-blue-700 text-white px-6 py-2 rounded hover:bg-blue-800">SUBMIT</button>
        <button type="reset" class="bg-gray-500 text-white px-6 py-2 rounded hover:bg-gray-600">CLEAR</button>
      </div>
    </form>
  </main>

</body>
</html>

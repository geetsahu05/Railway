<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Appointments & Meetings</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Header -->
  <header class="bg-blue-900 text-white py-4 w-full shadow-md">
    <div class="container mx-auto flex justify-between items-center px-6">
      <div class="flex items-center gap-4">
        <img src="/images/image.png" alt="Image" class="h-16 w-16">
        <div>
          <h1 class="text-xl font-bold">पूर्व तट रेलवे</h1>
          <h2 class="text-sm tracking-widest">(EAST COAST RAILWAY)</h2>
        </div>
      </div>
      <div class="flex gap-4 items-center">
        <a href="/admin/dashboard" class="bg-white text-blue-900 font-semibold px-4 py-2 rounded hover:bg-blue-100 transition">Home</a>
        <a href="/logout" class="bg-green-600 px-4 py-2 rounded hover:bg-green-700 transition">Logout</a>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto mt-10 bg-white shadow-md rounded-lg p-6">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-blue-800">Appointments & Meetings</h2>
      <a href="/admin/appointments" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
        Add New Appointment
      </a>
    </div>

    <!-- Filter -->
    <form action="/admin/appointments/view" method="GET" class="flex flex-wrap gap-4 mb-4">
      <div>
        <label class="font-semibold text-gray-700">From Date:</label><br/>
        <input type="date" name="from" class="border rounded px-2 py-1" />
      </div>
      <div>
        <label class="font-semibold text-gray-700">To Date:</label><br/>
        <input type="date" name="to" class="border rounded px-2 py-1" />
      </div>
      <div class="flex items-end gap-2">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">SHOW</button>
        <a href="/admin/appointments/view" class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500">CLEAR</a>
      </div>
    </form>

    <!-- Appointments Table -->
    <div class="overflow-x-auto">
      <table class="w-full table-auto border border-gray-300 text-sm">
        <thead class="bg-blue-100 text-blue-900 font-semibold">
          <tr>
            <th class="border px-2 py-2">Date</th>
            <th class="border px-2 py-2">Time</th>
            <th class="border px-2 py-2">With</th>
            <th class="border px-2 py-2">Designation</th>
            <th class="border px-2 py-2">Purpose</th>
            <th class="border px-2 py-2">Venue</th>
            <th class="border px-2 py-2">VIP?</th>
            <th class="border px-2 py-2">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% 
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(today.getDate() + 1);
            const todayStr = today.toISOString().split('T')[0];
            const tomorrowStr = tomorrow.toISOString().split('T')[0];
          %>
          <% appointments.forEach(item => {
            const apptDate = new Date(item.date);
            const dateStr = apptDate.toISOString().split('T')[0];
            let rowClass = "";
            if (dateStr === todayStr) {
              rowClass = "bg-green-200";
            } else if (dateStr === tomorrowStr) {
              rowClass = "bg-yellow-300";
            } else if (apptDate > tomorrow) {
              rowClass = "bg-sky-200";
            } else {
              rowClass = "bg-white";
            }
          %>
            <tr class="<%= rowClass %> text-center">
              <td class="border px-2 py-1"><%= dateStr %></td>
              <td class="border px-2 py-1"><%= item.time %></td>
              <td class="border px-2 py-1"><%= item.withh %></td>
              <td class="border px-2 py-1"><%= item.designation %></td>
              <td class="border px-2 py-1"><%= item.purpose %></td>
              <td class="border px-2 py-1"><%= item.venue %></td>
              <td class="border px-2 py-1"><%= item.isVIP ? "Yes" : "No" %></td>
              <td class="border px-2 py-1">
                <a href="/admin/appointments/edit/<%= item._id %>" class="text-blue-600 hover:underline">✏️</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Color Legend -->
    <div class="mt-6 flex flex-wrap gap-4 text-sm">
      <div class="flex items-center gap-2">
        <span class="w-4 h-4 bg-green-200 border border-gray-400"></span> Today
      </div>
      <div class="flex items-center gap-2">
        <span class="w-4 h-4 bg-yellow-300 border border-gray-400"></span> Tomorrow
      </div>
      <div class="flex items-center gap-2">
        <span class="w-4 h-4 bg-sky-200 border border-gray-400"></span> Other Days
      </div>
      <div class="flex items-center gap-2">
        <span class="w-4 h-4 bg-white border border-gray-400"></span> Past Days
      </div>
    </div>
  </main>

</body>
</html>
